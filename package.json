{
  "name": "code_party_firebase",
  "license": "UNLICENSED",
  "dependencies": {
    "firebase": "9.6.9"
  },
  "scripts": {
    "start": "firebase emulators:start --token $FIREBASE_CLI_TOKEN",
    "test": "firebase emulators:exec --only database 'yarn run jest' --token $FIREBASE_CLI_TOKEN",
    "test:watch": "firebase emulators:exec --only database 'yarn run jest --watch --detectOpenHandles' --token $FIREBASE_CLI_TOKEN",
    "lint": "eslint __test__/**/*.{jsx,js,tsx,ts}",
    "lint:fix": "eslint --fix __test__/**/*.{jsx,js,tsx,ts}",
    "format": "prettier --check __test__/**/*.{jsx,js,tsx,ts,css,scss,md,json}",
    "format:fix": "prettier --write __test__/**/*.{jsx,js,tsx,ts,css,scss,md,json}",
    "fixall": "yarn lint:fix && yarn format:fix",
    "fixallmac": "eslint --fix '__test__/**/*.{jsx,js,tsx,ts}' && prettier --write '__test__/**/*.{jsx,js,tsx,ts,css,scss,md,json}'"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^2.0.2",
    "@types/jest": "^28.1.1",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^26.6.0",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "firebase-tools": "^11.1.0",
    "jest": "^28.1.1",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.4",
    "typescript": "^4.7.3",
    "uuid": "^8.3.2"
  }
}
